<!-- [CSS:W3Template] -->
<div class="w3-card w3-round w3-theme-d1 w3-margin w3-center" style="display: flex;">

    <!-- Container for avatar and age/moons -->
    <div class="avatar-info" style="flex: 1; display: flex; flex-direction: column; align-items: center;">
      <!-- Avatar -->
      <div class="avatar">
        <img class="w3-circle" src="https://i.gifer.com/6Dg.gif" alt="AI Avatar" style="width: 60px; height: 60px;">
        <span id="current-age"></span>
      </div>
      
    </div>

    <!-- Right side grid for additional info -->
    <div style="flex: 2; display: grid; gap: 20px;">
      <!-- Nom et barres de santé/mana -->
      <div class="player-info">
        <!-- Nom du personnage -->
        <h1>%= firstname %</h1>

        <div id="esperanceHP" class="progress-container" title="❤️ Health">
          <div class="progress-bar progress-container"></div>
        </div>

        <div id="energy-bar" class="w3-hide progress-bar progress-border progress-container bg-druid" title="🍗 Calorie" style="width: 100%;">
        </div>

        <p id="nights-lived" class="w3-right-align" title="Moons collected"></p>

      </div>
    </div>

</div>
  
  <script src="/js/LifeTimeCalory.js"></script>

