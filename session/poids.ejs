<script>
    function enregistrerPoids() {
        var poids = document.getElementById("inputPoids").value;
        if (poids) {
            document.cookie = "poids=" + encodeURIComponent(poids) + ";path=/";
        }
    }

    function afficherPoids() {
        var cookies = document.cookie.split(';');
        var poids = "";
        for (var i = 0; i < cookies.length; i++) {
            var parts = cookies[i].split('=');
            if (parts[0].trim() === "poids") {
                poids = decodeURIComponent(parts[1]);
                break;
            }
        }
        var inputPoids = document.getElementById("inputPoids");
        inputPoids.value = poids;
    }

    function verifierPoidsCookie() {
        if (document.cookie.indexOf('poids=') >= 0) {
            afficherPoids();
        }
    }

    window.onload = verifierPoidsCookie;

    // Ajoute un écouteur d'événement pour enregistrer les modifications de poids dès qu'elles sont faites
    document.getElementById("inputPoids").addEventListener('change', enregistrerPoids);
</script>